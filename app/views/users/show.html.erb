<h2><%= @user.username %>'s Profile</h2>

<h3><%= @user.username %>'s Goals</h3>
<ul>
  <% @user.goals.each do |goal| %>
    <% if logged_in? &&
          current_user.id == @user.id &&
          goal.private == true %>
      <li><%= link_to goal.title, goal_url(goal) %></li>
    <% elsif goal.private == false %>
      <li><%= link_to goal.title, goal_url(goal) %></li>
    <% end %>
  <% end %>
</ul>
