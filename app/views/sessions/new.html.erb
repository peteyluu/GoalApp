<h1>Log In</h1>

<form action="<%= session_url %>" method="post">
  <%= auth_token %>

  <label for="session_username">Username</label>
  <input type="text"
         id="session_username"
         name="session[username]">
  <br>

  <label for="session_password">Password</label>
  <input type="password"
         id="session_password"
         name="session[password]">
  <br>

  <input type="submit" value="Sign In">
</form>
