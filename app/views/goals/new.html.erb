<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label for="goal_title">Title:</label>
  <input type="text"
         id="goal_title"
         name="goal[title]"
         value="<%= @goal.title %>">
  <br>

  <label for="goal_details">Details:</label>
  <textarea id="goal_details" name="goal[details]"><%= @goal.details %></textarea>
  <br>

  <label for="goal_private">Private?</label>
  <input type="checkbox"
         id="goal_private"
         name="goal[private]">
  <br>

  <label for="goal_completed">Completed?</label>
  <input type="checkbox"
         id="goal_completed"
         name="goal[completed]">
  <br>

  <input type="submit" value="Create Goal">
</form>
